<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

        <!-- jQuery library -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

        <!-- Latest compiled JavaScript -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script> 

        <title>{% block title %}Search film{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        {% block body %}

    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Film Search</a>
            </div>
        <ul class="nav navbar-nav">
            <li><a href="/search/search">Home</a></li>
            <li><a href="/favorite/favoritelist">My Favorites</a></li>
            <li><a href="/user/login">Login</a></li>
            <li><a href="/user/register">Register</a></li>
        </ul>
        </div>
    </nav>

        
        <form method="post">
            <div class="container">
                <h1>Search Film</h1><br>
                <div class="row">
                    <label>Film Name</label> <input class="form-control my-0 py-1" name="film" type="text" />
                    <label>Year</label> <input class="form-control my-0 py-1" name="year" type="text" />
                    <button name="submit" type="submit" class="btn btn-dark">Search</button>
                </div>
            </div>
        </form><br>
        
        {% for response in responses %}

            <div class="container">
                <div class="row">
                    <div class="col-sm-4">
                        <img src={{response.Poster}} />   
                    </div>
                    <div class="col-sm-8">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <tr>
                                    <td>Title</td>
                                    <td>{{response.Title}}</td>
                                </tr>
                                <tr>
                                    <td>Year</td>
                                    <td>{{response.Year}}</td>
                                </tr>
                                <tr>
                                    <td>imdbID</td>
                                    <td>{{response.imdbID}}</td>
                                </tr>
                            </table>

                        <a href='/search/detail?id={{response.imdbID}}' class="btn btn-default">More Info</a>
                                   
                        <a href='/favorite/favorite?id={{response.imdbID}}&film={{response.Title}}' class="btn btn-default">Add to Favorite</a>

                        </div> 
                    </div>
                </div>
            </div><br>
        {% endfor %}

        {% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>